@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_Style.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container py-5">
    <!-- Başlık -->
    <div class="text-center mb-5">
        <h2 class="fw-bold">Bize Ulaşın</h2>
        <p class="text-muted">Her türlü soru, öneri ve şikayetleriniz için iletişime geçebilirsiniz.</p>
    </div>

    <div class="row justify-content-center">
        <!-- İletişim Formu -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h4 class="card-title text-center mb-4">İletişim Formu</h4>
                    <form>
                        
                        <div class="mb-3">
                            <label for="adSoyad" class="form-label">Ad Soyad</label>
                            <input type="text" class="form-control" id="adSoyad" placeholder="Adınızı ve soyadınızı girin">
                        </div>

                       
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" class="form-control" id="email" placeholder="E-posta adresinizi girin">
                        </div>

                        
                        <div class="mb-3">
                            <label for="telefon" class="form-label">Telefon</label>
                            <input type="tel" class="form-control" id="telefon" placeholder="Telefon numaranızı girin">
                        </div>

                        <div class="mb-3">
                            <label for="mesaj" class="form-label">Mesaj</label>
                            <textarea class="form-control" id="mesaj" rows="4" placeholder="Mesajınızı buraya yazın"></textarea>
                        </div>

                        
                        <button type="submit" class="btn btn-primary w-100" disabled>Gönder</button>
                    </form>
                </div>
            </div>
        </div>

        
    </div>
</div>
