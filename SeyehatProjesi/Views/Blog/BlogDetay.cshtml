@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_Style.cshtml";
}
@model SeyehatProjesi.Models.Siniflar.BlogYorum

<!DOCTYPE HTML>
<html>
<head>
    <title>Personal Blog - Blog Detay</title>
    <link href="~/web2/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/web2/css/style.css" rel="stylesheet" type="text/css" />
    <link href="http://fonts.googleapis.com/css?family=Oswald:100,400,300,700" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic" rel="stylesheet" type="text/css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="~/web2/js/move-top.js"></script>
    <script src="~/web2/js/easing.js"></script>
</head>
<body>

    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                <!-- Blog Detayları -->
                @foreach (var blog in Model.Deger1)
                {
                    <div class="single-grid">
                        <img src="@blog.BlogImage" alt="Blog Image" />
                        <p>@blog.Aciklama</p>
                    </div>
                }

                <!-- Yorumlar -->
                @foreach (var yorum in Model.Deger2)
                {
                    <ul class="comment-list">
                        <li>
                            <img src="~/web2/images/avatar.png" class="img-responsive" alt="User Avatar">
                            <div class="desc">
                                <p>@yorum.KullaniciAdi: @yorum.Yorum</p>
                            </div>
                        </li>
                    </ul>

                }

                    <!-- Yorum Formu -->
                    <div class="content-form">
                        <h3>Bir Yorum Yapın</h3>
                        <form>
                            <input type="text" placeholder="Kullanıcı Adı" required />
                            <input type="text" placeholder="Mail Adresi" required />
                            <textarea placeholder="Yorum"></textarea>
                            <input type="submit" value="Gönder" />
                        </form>
                    </div>
                </div>

            <!-- Yan İçerik -->
            <div class="col-md-4 side-content">
                <div class="recent">
                    <h3>SON BLOGLAR</h3>
                    <ul>
                        <li><a href="#">Aliquam tincidunt mauris</a></li>
           
                    </ul>
                </div>
                <div class="comments">
                    <h3>SON YORUMLAR</h3>
                    <ul>
                        <li><a href="#">Amada Doe</a> on <a href="#">Hello World!</a></li>
               
                    </ul>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
